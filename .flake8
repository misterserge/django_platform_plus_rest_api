[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    migrations,
    settings.py,
    .tox,
    dist,
    build,
    *.egg-info

ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file

per-file-ignores =
    __init__.py:F401
    */migrations/*:E501

max-complexity = 10

